<Window x:Class="Group1.MusicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        xmlns:views="clr-namespace:Group1.MusicApp.Views"
        Title="🎧 Music Player"
        Height="760"
        Width="1120"
        Background="#0B0B0B"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 🌙 Sidebar -->
        <DockPanel Grid.Column="0">
            <DockPanel.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1E1E1E" Offset="0"/>
                    <GradientStop Color="#121212" Offset="1"/>
                </LinearGradientBrush>
            </DockPanel.Background>

            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,25,0,30">
                    <TextBlock Text="🎵" FontSize="28" Foreground="#1DB954" Margin="0,0,10,0"/>
                    <TextBlock Text="My Playlist" FontSize="24" FontWeight="Bold" Foreground="#1DB954"/>
                </StackPanel>

                <ListBox x:Name="lstPlaylist"
                         Background="Transparent"
                         Foreground="#F5F5F5"
                         BorderThickness="0"
                         FontSize="16"
                         Margin="15,0,0,0"
                         Cursor="Hand">
                    <ListBoxItem Content="🔍  Tìm kiếm" Margin="0,5" Selected="SearchMenuItem_Selected"/>
                    <ListBoxItem Content="❤️  Playlist của tôi" Margin="0,5" Selected="PlaylistMenuItem_Selected"/>
                    <ListBoxItem Content="⚙️  Cài đặt" Margin="0,5"/>
                </ListBox>
            </StackPanel>
        </DockPanel>

        <!-- 🌟 Main View -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 🔍 Search bar -->
            <DockPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,15">
                    <TextBlock Text="Danh mục" FontSize="18" FontWeight="Bold" Foreground="#1DB954" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnCategoryTrendy"
                                Content="🔥 Trendy"
                                Width="120"
                                Height="35"
                                Margin="0,0,10,0"
                                Background="#1DB954"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="CategoryButton_Click"
                                Tag="Trendy"/>
                        <Button x:Name="btnCategoryPopular"
                                Content="⭐ Thịnh hành"
                                Width="120"
                                Height="35"
                                Margin="0,0,10,0"
                                Background="#2A2A2A"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="CategoryButton_Click"
                                Tag="Thịnh hành"/>
                        <Button x:Name="btnCategoryNew"
                                Content="🆕 Mới phát hành"
                                Width="140"
                                Height="35"
                                Margin="0,0,10,0"
                                Background="#2A2A2A"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="CategoryButton_Click"
                                Tag="Mới phát hành"/>
                        <Button x:Name="btnCategoryPop"
                                Content="🎵 Pop"
                                Width="100"
                                Height="35"
                                Margin="0,0,10,0"
                                Background="#2A2A2A"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="CategoryButton_Click"
                                Tag="Pop"/>
                        <Button x:Name="btnCategoryRock"
                                Content="🎸 Rock"
                                Width="100"
                                Height="35"
                                Margin="0,0,10,0"
                                Background="#2A2A2A"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="CategoryButton_Click"
                                Tag="Rock"/>
                        <Button x:Name="btnCategoryHipHop"
                                Content="🎤 Hip Hop"
                                Width="110"
                                Height="35"
                                Margin="0,0,10,0"
                                Background="#2A2A2A"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="CategoryButton_Click"
                                Tag="Hip Hop"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
                    <TextBox x:Name="txtSearch"
                             Width="500"
                             Height="45"
                             FontSize="16"
                             materialDesign:HintAssist.Hint="Tìm bài hát hoặc ca sĩ..."
                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                             Margin="0,0,15,0"
                             Foreground="#FFF"
                             Background="#181818"
                             BorderBrush="#333"
                             KeyDown="txtSearch_KeyDown"/>
                    <Button x:Name="btnSearch"
                            Content="Tìm kiếm"
                            Width="100"
                            Background="#1DB954"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Style="{DynamicResource MaterialDesignRaisedButton}"
                            Click="btnSearch_Click">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="15" Color="#1DB954" ShadowDepth="0"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </DockPanel>

            <!-- 🎵 Danh sách bài hát -->
            <Border x:Name="SearchResultsContainer"
                    Grid.Row="1"
                    Background="#121212"
                    CornerRadius="10"
                    Padding="10">
                <ListView x:Name="lstTracks"
                          Foreground="White"
                          Background="#181818"
                          BorderThickness="0"
                          SelectionChanged="lstTracks_SelectionChanged"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.CanContentScroll="False"
                          HorizontalContentAlignment="Stretch">
                    
                    <!-- Group Style để hiển thị header cho mỗi category -->
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border Background="#1E1E1E" 
                                            Padding="10,15,10,10" 
                                            Margin="0,10,0,5"
                                            CornerRadius="8">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" 
                                                       FontSize="20" 
                                                       FontWeight="Bold" 
                                                       Foreground="#1DB954"/>
                                            <Rectangle Height="2" 
                                                       Fill="#1DB954" 
                                                       Margin="0,5,0,0" 
                                                       HorizontalAlignment="Left" 
                                                       Width="60"
                                                       Opacity="0.7"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>
                    
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Margin" Value="4"/>
                            <Setter Property="Padding" Value="6"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#242424"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#1DB954"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image Width="60"
                                       Height="60"
                                       Margin="0,0,10,0"
                                       Stretch="UniformToFill"
                                       VerticalAlignment="Center"
                                       Source="{Binding AlbumImageUrl}"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding ArtistName}" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <!-- Playlist View -->
            <views:PlaylistView x:Name="PlaylistViewControl"
                                Grid.Row="1"
                                Visibility="Collapsed"/>

            <!-- 🎧 Media Player -->
            <Border Grid.Row="2"
                    Background="#181818"
                    CornerRadius="15"
                    Padding="15"
                    Margin="0,15,0,0">
                <Grid>
                    <!-- Property elements PHẢI đứng trước -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- MediaElement đặt sau property elements -->
                    <MediaElement x:Name="mediaPlayer"
                                  Grid.RowSpan="2"
                                  Grid.ColumnSpan="3"
                                  LoadedBehavior="Manual"
                                  UnloadedBehavior="Manual"
                                  Volume="0.8"
                                  Visibility="Collapsed"/>

                    <Image x:Name="imgCover"
                           Width="80"
                           Height="80"
                           Grid.Row="0"
                           Grid.Column="0"
                           Stretch="UniformToFill"
                           Margin="0,0,15,0"
                           VerticalAlignment="Center"/>

                    <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0">
                        <TextBlock x:Name="lblNowPlaying"
                                   Text="Chưa chọn bài"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="350"/>
                        <TextBlock x:Name="lblArtist"
                                   Text=""
                                   Foreground="#A0A0A0"
                                   FontSize="14"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="350"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="btnPrev" Content="⏮️" Width="50" Height="50" Margin="8,0"
                                Background="#222" Foreground="White" BorderBrush="Transparent"
                                Cursor="Hand" Click="btnPrev_Click"/>
                        <Button x:Name="btnPlayPause" Content="⏯️" Width="50" Height="50" Margin="8,0"
                                Background="#1DB954" Foreground="White" BorderBrush="Transparent"
                                Cursor="Hand" Click="btnPlayPause_Click"/>
                        <Button x:Name="btnNext" Content="⏭️" Width="50" Height="50" Margin="8,0"
                                Background="#222" Foreground="White" BorderBrush="Transparent"
                                Cursor="Hand" Click="btnNext_Click"/>
                    </StackPanel>

                    <!-- Progress bar -->
                    <ProgressBar x:Name="progressPreview"
                                 Grid.Row="1"
                                 Grid.ColumnSpan="3"
                                 Height="6"
                                 Margin="0,10,0,0"
                                 Minimum="0"
                                 Maximum="30"
                                 Value="0"
                                 Foreground="#1DB954"
                                 Background="#333"/>
                </Grid>
            </Border>

            <!-- 🎤 Lyrics -->
            <Border Grid.Row="3"
                    Background="#101010"
                    CornerRadius="10"
                    Padding="30,20"
                    Margin="0,15,0,0">
                <Grid>
                    <!-- Plain lyrics -->
                    <ScrollViewer x:Name="svPlainLyrics" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="txtLyrics"
                                   Foreground="#EDEDED"
                                   FontSize="18"
                                   TextWrapping="Wrap"
                                   LineHeight="30"
                                   TextAlignment="Center"
                                   FontWeight="Medium"
                                   Opacity="0.95"
                                   Text="🎶 Chưa có lời bài hát..."/>
                    </ScrollViewer>

                    <!-- Placeholder cho lyrics sync (ẩn) -->
                    <ScrollViewer x:Name="svLyrics"
                                  Visibility="Collapsed"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Lyrics sync area"
                                       Foreground="Gray"
                                       HorizontalAlignment="Center"
                                       Margin="8"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

<Window x:Class="Group1.MusicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        xmlns:views="clr-namespace:Group1.MusicApp.Views"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="🎧 Music Player"
        Height="760"
        Width="1120"
        Background="#0B0B0B"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 🌙 Sidebar -->
        <DockPanel Grid.Column="0">
            <DockPanel.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1E1E1E" Offset="0" />
                    <GradientStop Color="#121212" Offset="1" />
                </LinearGradientBrush>
            </DockPanel.Background>

            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,25,0,30">
                    <TextBlock Text="🎵"
                               FontSize="28"
                               Foreground="#1DB954"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="My Playlist"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#1DB954"/>
                </StackPanel>

                <ListBox x:Name="lstPlaylist"
                         Background="Transparent"
                         Foreground="#F5F5F5"
                         BorderThickness="0"
                         FontSize="16"
                         Margin="15,0,0,0"
                         Cursor="Hand">
                    <ListBoxItem Content="🔍  Tìm kiếm" Margin="0,5" Selected="SearchMenuItem_Selected"/>
                    <ListBoxItem Content="❤️  Playlist của tôi" Margin="0,5" Selected="PlaylistMenuItem_Selected"/>
                    <ListBoxItem Content="🕒  Recently Played" Margin="0,5"/>
                    <ListBoxItem Content="🤖  AI Mood Mix" Margin="0,5"/>
                </ListBox>
            </StackPanel>
        </DockPanel>

        <!-- 🌟 Main View -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 🔍 Search bar -->
            <DockPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBox x:Name="txtSearch"
                         Width="500"
                         Height="45"
                         FontSize="16"
                         materialDesign:HintAssist.Hint="Tìm bài hát hoặc ca sĩ..."
                         Style="{DynamicResource MaterialDesignFilledTextBox}"
                         Margin="0,0,15,0"
                         Foreground="#FFF"
                         Background="#181818"
                         BorderBrush="#333"
                         KeyDown="txtSearch_KeyDown" />
                <Button x:Name="btnSearch"
                        Content="Tìm kiếm"
                        Width="100"
                        Background="#1DB954"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Style="{DynamicResource MaterialDesignRaisedButton}"
                        Click="btnSearch_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="15" Color="#1DB954" ShadowDepth="0" />
                    </Button.Effect>
                </Button>
            </DockPanel>

            <!-- 🎵 Danh sách bài hát -->
            <Border x:Name="SearchResultsContainer"
                    Grid.Row="1"
                    Background="#121212"
                    CornerRadius="10"
                    Padding="10">
                <ListView x:Name="lstTracks"
                          Foreground="White"
                          Background="#181818"
                          BorderThickness="0"
                          SelectionChanged="lstTracks_SelectionChanged"
                          PreviewMouseLeftButtonDown="lstTracks_PreviewMouseLeftButtonDown"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          HorizontalContentAlignment="Stretch">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Margin" Value="4"/>
                            <Setter Property="Padding" Value="6"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#242424"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#1DB954"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Image Width="60"
                                       Height="60"
                                       Margin="0,0,10,0"
                                       Stretch="UniformToFill"
                                       VerticalAlignment="Center"
                                       Source="{Binding AlbumImageUrl}" />

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" />
                                    <TextBlock Text="{Binding ArtistName}" FontSize="12" Foreground="Gray"/>
                                </StackPanel>

                                <Button Grid.Column="2"
                                        Content="➕"
                                        Width="36"
                                        Height="36"
                                        Margin="5,0,0,0"
                                        FontSize="18"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#1DB954"
                                        Cursor="Hand"
                                        ToolTip="Thêm vào playlist"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <!-- Playlist View -->
            <views:PlaylistView x:Name="PlaylistViewControl" Grid.Row="1" Visibility="Collapsed"/>

            <!-- 🎧 Hidden Media Player -->
            <MediaElement x:Name="mediaPlayer"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Stop"
                          Volume="0.8"
                          Visibility="Collapsed"/>

            <!-- ▶ Now Playing -->
            <Border Grid.Row="2"
                    Background="#181818"
                    CornerRadius="15"
                    Padding="20"
                    Margin="0,15,0,0">
                <StackPanel>
                    <DockPanel Margin="0,0,0,15">
                        <Image x:Name="imgCover"
                               Width="90"
                               Height="90"
                               Stretch="UniformToFill"
                               DockPanel.Dock="Left"
                               Margin="0,0,15,0"/>
                        <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock x:Name="lblNowPlaying"
                                       Text="Chưa chọn bài"
                                       Foreground="White"
                                       FontSize="20"
                                       FontWeight="Bold"/>
                            <TextBlock x:Name="lblArtist"
                                       Text=""
                                       Foreground="#A0A0A0"
                                       FontSize="14"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="⏮️" Width="50" Height="50" Margin="10,0" Background="#222" Foreground="White" BorderBrush="Transparent" Cursor="Hand"/>
                            <Button Content="⏯️" Width="50" Height="50" Margin="10,0" Background="#1DB954" Foreground="White" BorderBrush="Transparent" Cursor="Hand" Click="Button_Click"/>
                            <Button Content="⏭️" Width="50" Height="50" Margin="10,0" Background="#222" Foreground="White" BorderBrush="Transparent" Cursor="Hand"/>
                            <Button Content="💖" Width="50" Height="50" Margin="10,0" Background="#222" Foreground="#1DB954" BorderBrush="Transparent" Cursor="Hand"/>
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </Border>

            <!-- 🎤 Lyrics -->
            <Border Grid.Row="3"
                    Background="#101010"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,15,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="txtLyrics"
                               Foreground="White"
                               FontSize="14"
                               TextWrapping="Wrap"
                               LineHeight="24"
                               Text="🎶 Chưa có lời bài hát..." />
                </ScrollViewer>
            </Border>

            <!-- WebView2 Spotify SDK -->
            <wv2:WebView2 x:Name="WebPlayer" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>

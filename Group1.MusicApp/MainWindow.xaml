<Window x:Class="Group1.MusicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        xmlns:views="clr-namespace:Group1.MusicApp.Views"
        xmlns:models="clr-namespace:Group1.MusicApp.Models"
        mc:Ignorable="d"
        Title="🎧 Music Player"
        Height="744"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#0B0B0B"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/> <!-- Sidebar -->
            <ColumnDefinition Width="*"/>   <!-- Main View -->
        </Grid.ColumnDefinitions>

        <!-- 🌙 Sidebar -->
        <DockPanel Grid.Column="0">
            <DockPanel.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1E1E1E" Offset="0" />
                    <GradientStop Color="#121212" Offset="1" />
                </LinearGradientBrush>
            </DockPanel.Background>

            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,25,0,30">
                    <TextBlock Text="🎵"
                               FontSize="28"
                               Foreground="#1DB954"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="My Playlist"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#1DB954"/>
                </StackPanel>

                <ListBox x:Name="lstPlaylist"
                         Background="Transparent"
                         Foreground="#F5F5F5"
                         BorderThickness="0"
                         FontSize="16"
                         Margin="15,0,0,0"
                         Cursor="Hand"
                         SelectionChanged="lstPlaylist_SelectionChanged">
                    <ListBoxItem Content="❤️  Favorites" Margin="0,5"/>
                    <ListBoxItem Content="🕒  Recently Played" Margin="0,5"/>
                    <ListBoxItem Content="🤖  AI Mood Mix" Margin="0,5"/>
                </ListBox>
            </StackPanel>
        </DockPanel>

        <!-- 🌟 Main View -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Search -->
                <RowDefinition Height="*"/>    <!-- List -->
                <RowDefinition Height="Auto"/> <!-- Now Playing -->
                <RowDefinition Height="Auto"/> <!-- Lyrics -->
                <RowDefinition Height="Auto"/> <!-- Status Bar -->
            </Grid.RowDefinitions>

            <!-- 🔍 Search bar -->
            <DockPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBox x:Name="SearchBox"
                         Width="500"
                         Height="45"
                         FontSize="16"
                         materialDesign:HintAssist.Hint="Tìm bài hát hoặc ca sĩ..."
                         Style="{DynamicResource MaterialDesignFilledTextBox}"
                         Margin="0,0,15,0"
                         Foreground="#FFF"
                         Background="#181818"
                         BorderBrush="#333"
                         KeyDown="SearchBox_KeyDown" />
                <Button x:Name="SearchButton"
                        Content="Tìm kiếm"
                        Width="100"
                        Height="45"
                        Background="#1DB954"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Style="{DynamicResource MaterialDesignRaisedButton}"
                        Click="SearchButton_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="15" Color="#1DB954" ShadowDepth="0" />
                    </Button.Effect>
                </Button>
            </DockPanel>

            <!-- 🎵 Danh sách bài hát / Search Results / Playlist / Track Detail -->
            <Grid Grid.Row="1">
                <!-- Welcome Panel -->
                <Border x:Name="WelcomePanel"
                        Background="#121212"
                        CornerRadius="10"
                        Padding="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="MusicNote"
                                                Width="120" Height="120"
                                                Foreground="#1DB954"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,20"/>
                        <TextBlock Text="Chào mừng đến với Music Player"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Tìm kiếm bài hát yêu thích của bạn"
                                   FontSize="16"
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Search Results -->
                <Border x:Name="SearchResultsPanel"
                        Background="#121212"
                        CornerRadius="10"
                        Padding="10"
                        Visibility="Collapsed">
                    <ListView x:Name="SearchResultsList"
                              Foreground="White"
                              Background="#181818"
                              BorderThickness="0"
                              SelectionChanged="SearchResultsList_SelectionChanged"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:Track}">
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Image Source="{Binding AlbumImageUrl}"
                                           Width="60" Height="60"
                                           Margin="0,0,10,0"
                                           Stretch="UniformToFill"
                                           VerticalAlignment="Center"
                                           ClipToBounds="True"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" />
                                        <TextBlock Text="{Binding ArtistName}" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>

                <!-- Playlist View -->
                <views:PlaylistView x:Name="PlaylistView"
                                   Visibility="Collapsed"
                                   TrackPlayRequested="PlaylistView_TrackPlayRequested" />

                <!-- Track Detail View -->
                <views:TrackDetailView x:Name="TrackDetailView"
                                       Visibility="Collapsed"
                                       TrackAddedToPlaylist="TrackDetailView_TrackAddedToPlaylist" />
            </Grid>

            <!-- 🎧 Media Player ẩn -->
            <MediaElement x:Name="mediaPlayer"
                          Grid.Row="1"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Stop"
                          Volume="0.8"
                          Visibility="Collapsed"/>

            <!-- ▶ Now Playing -->
            <Border Grid.Row="2"
                    Background="#181818"
                    CornerRadius="15"
                    Padding="20"
                    Margin="0,15,0,0">
                <DockPanel>
                    <Image x:Name="imgCover"
                           Width="90" Height="90"
                           Stretch="UniformToFill"
                           DockPanel.Dock="Left"
                           Margin="0,0,15,0"/>
                    <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                        <TextBlock x:Name="lblNowPlaying"
                                   Text="Chưa chọn bài"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="lblArtist"
                                   Text=""
                                   Foreground="#A0A0A0"
                                   FontSize="14"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="⏮️" Width="50" Height="50" Margin="10,0" Background="#222" Foreground="White" BorderBrush="Transparent" Cursor="Hand"/>
                        <!-- <Button Content="⏯️" Width="50" Height="50" Margin="10,0" Background="#1DB954" Foreground="White" BorderBrush="Transparent" Cursor="Hand" Click="Button_Click"/> -->
                        <Button Content="⏯️" Width="50" Height="50" Margin="10,0" Background="#1DB954" Foreground="White" BorderBrush="Transparent" Cursor="Hand"/>
                        <Button Content="⏭️" Width="50" Height="50" Margin="10,0" Background="#222" Foreground="White" BorderBrush="Transparent" Cursor="Hand"/>
                        <Button Content="💖" Width="50" Height="50" Margin="10,0" Background="#222" Foreground="#1DB954" BorderBrush="Transparent" Cursor="Hand"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- 🎤 Lyrics -->
            <Border Grid.Row="3"
                    Background="#101010"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,15,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="txtLyrics"
                               Foreground="White"
                               FontSize="14"
                               TextWrapping="Wrap"
                               LineHeight="24"
                               Text="🎶 Chưa có lời bài hát..." />
                </ScrollViewer>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="4"
                    Background="#1E1E1E"
                    Padding="15,10"
                    BorderBrush="#333"
                    BorderThickness="0,1,0,0"
                    Margin="0,15,0,0">
                <TextBlock x:Name="StatusText"
                           Text="Ready - Search for music!"
                           FontSize="14"
                           Foreground="Gray"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>

<Window x:Class="Group1.MusicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        mc:Ignorable="d"
        Title="🎧 Music Player"
        Height="744"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#0B0B0B"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/> <!-- Sidebar -->
            <ColumnDefinition Width="*"/>   <!-- Main View -->
        </Grid.ColumnDefinitions>

        <!-- 🌙 Sidebar -->
        <DockPanel Grid.Column="0">
            <DockPanel.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1E1E1E" Offset="0" />
                    <GradientStop Color="#121212" Offset="1" />
                </LinearGradientBrush>
            </DockPanel.Background>

            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,25,0,30">
                    <TextBlock Text="🎵"
                               FontSize="28"
                               Foreground="#1DB954"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="My Playlist"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#1DB954"/>
                </StackPanel>

                <ListBox x:Name="lstPlaylist"
                         Background="Transparent"
                         Foreground="#F5F5F5"
                         BorderThickness="0"
                         FontSize="16"
                         Margin="15,0,0,0"
                         Cursor="Hand">
                    <ListBoxItem Content="❤️  Favorites" Margin="0,5"/>
                    <ListBoxItem Content="🕒  Recently Played" Margin="0,5"/>
                    <ListBoxItem Content="🤖  AI Mood Mix" Margin="0,5"/>
                </ListBox>
            </StackPanel>
        </DockPanel>

        <!-- 🌟 Main View -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Search -->
                <RowDefinition Height="*"/>    <!-- List -->
                <RowDefinition Height="Auto"/> <!-- Now Playing -->
                <RowDefinition Height="Auto"/> <!-- Lyrics -->
            </Grid.RowDefinitions>

            <!-- 🔍 Search bar -->
            <DockPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBox x:Name="txtSearch"
                         Width="500"
                         Height="45"
                         FontSize="16"
                         materialDesign:HintAssist.Hint="Tìm bài hát hoặc ca sĩ..."
                         Style="{DynamicResource MaterialDesignFilledTextBox}"
                         Margin="0,0,15,0"
                         Foreground="#FFF"
                         Background="#181818"
                         BorderBrush="#333" />
                <Button x:Name="btnSearch"
                        Content="Tìm kiếm"
                        Width="100"
                        Background="#1DB954"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Style="{DynamicResource MaterialDesignRaisedButton}"
                        Click="btnSearch_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="15" Color="#1DB954" ShadowDepth="0" />
                    </Button.Effect>
                </Button>
            </DockPanel>

            <!-- 🎵 Danh sách bài hát -->
            <Border Grid.Row="1" Background="#121212" CornerRadius="10" Padding="10">
                <ListView x:Name="lstTracks"
                          Foreground="White"
                          Background="#181818"
                          BorderThickness="0"
                          SelectionChanged="lstTracks_SelectionChanged"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Image Source="{Binding ImageUrl}"
                                       Width="60" Height="60"
                                       Margin="0,0,10,0"
                                       Stretch="UniformToFill"
                                       VerticalAlignment="Center"
                                       ClipToBounds="True"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" />
                                    <TextBlock Text="{Binding Artist}" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <!-- 🎧 Media Player ẩn -->
            <MediaElement x:Name="mediaPlayer"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Stop"
                          Volume="0.8"
                          Visibility="Collapsed"/>

            <!-- ▶ Now Playing -->
            <Border Grid.Row="2"
                    Background="#181818"
                    CornerRadius="15"
                    Padding="20"
                    Margin="0,15,0,0">
                <DockPanel>
                    <Image x:Name="imgCover"
                           Width="90" Height="90"
                           Stretch="UniformToFill"
                           DockPanel.Dock="Left"
                           Margin="0,0,15,0"/>
                    <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                        <TextBlock x:Name="lblNowPlaying"
                                   Text="Chưa chọn bài"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="lblArtist"
                                   Text=""
                                   Foreground="#A0A0A0"
                                   FontSize="14"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="⏮️" Width="50" Height="50" Margin="10,0" Background="#222" Foreground="White" BorderBrush="Transparent" Cursor="Hand"/>
                        <Button Content="⏯️" Width="50" Height="50" Margin="10,0" Background="#1DB954" Foreground="White" BorderBrush="Transparent" Cursor="Hand" Click="Button_Click"/>
                        <Button Content="⏭️" Width="50" Height="50" Margin="10,0" Background="#222" Foreground="White" BorderBrush="Transparent" Cursor="Hand"/>
                        <Button Content="💖" Width="50" Height="50" Margin="10,0" Background="#222" Foreground="#1DB954" BorderBrush="Transparent" Cursor="Hand"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- 🎤 Lyrics -->
            <Border Grid.Row="3"
                    Background="#101010"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,15,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="txtLyrics"
                               Foreground="White"
                               FontSize="14"
                               TextWrapping="Wrap"
                               LineHeight="24"
                               Text="🎶 Chưa có lời bài hát..." />
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>

<UserControl x:Class="Group1.MusicApp.Views.MoodAIView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Border Background="#181818"
            CornerRadius="10"
            Padding="24"
            Margin="0,0,10,0"
            BorderBrush="#333"
            BorderThickness="1">

        <StackPanel>

            <!-- Title -->
            <TextBlock Text="🎭 Mood AI Player"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,16"/>

            <TextBlock Text="Hãy chia sẻ tâm trạng của bạn để AI gợi ý bài hát phù hợp 🎵"
                       FontSize="15"
                       Foreground="#B3B3B3"
                       Margin="0,0,0,24"/>

            <!-- Voice Input Button -->
            <Button x:Name="btnVoiceMood"
                    Content="🎙 Nói tâm trạng của bạn"
                    Background="#2E2E2E"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Padding="12,6"
                    Height="42"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Margin="0,0,0,10"
                    Click="btnVoiceMood_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Textbox -->
            <TextBox x:Name="txtMood"
                     Height="42"
                     FontSize="14"
                     Padding="10,6"
                     Background="#202020"
                     Foreground="White"
                     BorderThickness="0"
                     Margin="0,0,0,14" />

            <!-- Suggest button -->
            <Button x:Name="btnMoodAI"
                    Content="🎧 Gợi ý nhạc theo tâm trạng"
                    Background="#1DB954"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Height="42"
                    Cursor="Hand"
                    Click="btnMoodAI_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Divider -->
            <Separator Margin="0,20,0,10" Background="#333" Height="1"/>

            <!-- Scrollable Song List -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Background="#191919"
                          Height="350">

                <ListView x:Name="lstMoodResults"
                          Background="#191919"
                          Foreground="White"
                          BorderThickness="0"
                          SelectionChanged="lstMoodResults_SelectionChanged"
                          HorizontalContentAlignment="Stretch">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Cover -->
                                <Image Width="56" Height="56"
                                       Margin="0,0,10,0"
                                       Stretch="UniformToFill"
                                       Source="{Binding AlbumImageUrl}"/>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TrackName}"
                                               FontWeight="SemiBold"
                                               FontSize="15"
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding ArtistName}"
                                               FontSize="13"
                                               Foreground="#AAA"
                                               Margin="0,3,0,0"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Play button -->
                                <Button Grid.Column="2"
                                        Content="▶"
                                        Width="36"
                                        Height="36"
                                        FontSize="14"
                                        Background="#1DB954"
                                        Foreground="White"
                                        BorderBrush="Transparent"
                                        Cursor="Hand"
                                        Click="MoodPlay_Click"
                                        Tag="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>

        </StackPanel>
    </Border>
</UserControl>

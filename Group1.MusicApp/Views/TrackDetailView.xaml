<UserControl x:Class="Group1.MusicApp.Views.TrackDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <UserControl.Resources>
        <!-- Glassmorphism Card Style -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <BlurEffect Radius="10"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Progress Bar Style -->
        <Style x:Key="AudioFeatureBar" TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignLinearProgressBar}">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tag Chip Style -->
        <Style x:Key="GenreChip" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="RootGrid">
        <!-- Animated Background with Gradient -->
        <Grid.Background>
            <LinearGradientBrush x:Name="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop x:Name="GradientStart" Color="#1e3c72" Offset="0"/>
                <GradientStop x:Name="GradientEnd" Color="#2a5298" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Background Blur Effect -->
        <Border Background="Black" Opacity="0.2"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
            <Grid MaxWidth="800">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Main Track Info Section -->
                <Border Grid.Row="0" Style="{StaticResource GlassCard}" Margin="0,0,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Album Cover with Shadow -->
                        <Border Grid.Column="0"
                                Width="250" Height="250"
                                CornerRadius="16"
                                Margin="0,0,30,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="10" Opacity="0.5"/>
                            </Border.Effect>
                            <Border CornerRadius="16" ClipToBounds="True">
                                <Grid>
                                    <Image x:Name="AlbumImage"
                                           Stretch="UniformToFill"/>

                                    <!-- Loading Placeholder -->
                                    <Grid x:Name="ImagePlaceholder" Background="#333">
                                        <materialDesign:PackIcon Kind="MusicNote"
                                                                Width="80" Height="80"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Foreground="White" Opacity="0.3"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Border>

                        <!-- Track Details -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <!-- Track Title -->
                            <TextBlock x:Name="TrackTitle"
                                       Text="Track Name"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,12">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.6"/>
                                </TextBlock.Effect>
                            </TextBlock>

                            <!-- Artist Name -->
                            <TextBlock x:Name="ArtistName"
                                       Text="Artist Name"
                                       FontSize="24"
                                       Foreground="White"
                                       Opacity="0.9"
                                       Margin="0,0,0,24"/>

                            <!-- Quick Stats Grid -->
                            <UniformGrid Rows="2" Columns="2" Margin="0,0,0,20">
                                <!-- Duration -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,20,12">
                                    <materialDesign:PackIcon Kind="ClockOutline"
                                                            Width="20" Height="20"
                                                            Foreground="White" Opacity="0.8"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock x:Name="Duration"
                                               Text="0:00"
                                               FontSize="16"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Popularity -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,20,12">
                                    <materialDesign:PackIcon Kind="Fire"
                                                            Width="20" Height="20"
                                                            Foreground="White" Opacity="0.8"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock x:Name="Popularity"
                                               Text="0%"
                                               FontSize="16"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Release Date -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                    <materialDesign:PackIcon Kind="CalendarOutline"
                                                            Width="20" Height="20"
                                                            Foreground="White" Opacity="0.8"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock x:Name="ReleaseDate"
                                               Text="Unknown"
                                               FontSize="16"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Album -->
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Album"
                                                            Width="20" Height="20"
                                                            Foreground="White" Opacity="0.8"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock x:Name="AlbumName"
                                               Text="Album Name"
                                               FontSize="16"
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </UniformGrid>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                        materialDesign:ButtonAssist.CornerRadius="20"
                                        Height="40"
                                        Margin="0,0,12,0"
                                        Background="#1DB954">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Play"
                                                                Width="20" Height="20"
                                                                Margin="0,0,8,0"/>
                                        <TextBlock Text="Play" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="AddToPlaylistButton"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        materialDesign:ButtonAssist.CornerRadius="20"
                                        Height="40"
                                        Margin="0,0,12,0"
                                        ToolTip="Add to Playlist">
                                    <materialDesign:PackIcon x:Name="AddToPlaylistIcon"
                                                            Kind="PlaylistPlus"
                                                            Width="20" Height="20"/>
                                </Button>

                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                        materialDesign:ButtonAssist.CornerRadius="20"
                                        Height="40">
                                    <materialDesign:PackIcon Kind="ShareVariant"
                                                            Width="20" Height="20"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Genres Section -->
                <Border Grid.Row="1"
                        Style="{StaticResource GlassCard}"
                        Margin="0,0,0,24"
                        x:Name="GenresSection"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Genres"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,16"/>
                        <ItemsControl x:Name="GenresList">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource GenreChip}">
                                        <TextBlock Text="{Binding}"
                                                   Foreground="White"
                                                   FontSize="14"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Audio Features Section -->
                <Border Grid.Row="2"
                        Style="{StaticResource GlassCard}"
                        Margin="0,0,0,24"
                        x:Name="AudioFeaturesSection"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Audio Features"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,24"/>

                        <!-- Energy -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Energy"
                                       Foreground="White"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                            <ProgressBar Grid.Column="1"
                                         x:Name="EnergyBar"
                                         Style="{StaticResource AudioFeatureBar}"
                                         Value="0" Maximum="100"
                                         VerticalAlignment="Center"
                                         Margin="12,0"/>
                            <TextBlock Grid.Column="2"
                                       x:Name="EnergyValue"
                                       Text="0%"
                                       Foreground="White"
                                       FontSize="14"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Danceability -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Danceability"
                                       Foreground="White"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                            <ProgressBar Grid.Column="1"
                                         x:Name="DanceabilityBar"
                                         Style="{StaticResource AudioFeatureBar}"
                                         Value="0" Maximum="100"
                                         VerticalAlignment="Center"
                                         Margin="12,0"/>
                            <TextBlock Grid.Column="2"
                                       x:Name="DanceabilityValue"
                                       Text="0%"
                                       Foreground="White"
                                       FontSize="14"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Valence (Happiness) -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Valence (Mood)"
                                       Foreground="White"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                            <ProgressBar Grid.Column="1"
                                         x:Name="ValenceBar"
                                         Style="{StaticResource AudioFeatureBar}"
                                         Value="0" Maximum="100"
                                         VerticalAlignment="Center"
                                         Margin="12,0"/>
                            <TextBlock Grid.Column="2"
                                       x:Name="ValenceValue"
                                       Text="0%"
                                       Foreground="White"
                                       FontSize="14"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Acousticness -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Acousticness"
                                       Foreground="White"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                            <ProgressBar Grid.Column="1"
                                         x:Name="AcousticnessBar"
                                         Style="{StaticResource AudioFeatureBar}"
                                         Value="0" Maximum="100"
                                         VerticalAlignment="Center"
                                         Margin="12,0"/>
                            <TextBlock Grid.Column="2"
                                       x:Name="AcousticnessValue"
                                       Text="0%"
                                       Foreground="White"
                                       FontSize="14"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Loading Indicator -->
                <Border Grid.Row="3"
                        x:Name="LoadingPanel"
                        Style="{StaticResource GlassCard}"
                        Visibility="Visible">
                    <StackPanel HorizontalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                     Value="0"
                                     IsIndeterminate="True"
                                     Width="50" Height="50"
                                     Margin="0,0,0,16"/>
                        <TextBlock Text="Loading track details..."
                                   Foreground="White"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
